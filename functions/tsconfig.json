{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"typeRoots": ["@types", "./node_modules/@types"]
	},
	"compileOnSave": true,
	"include": ["src"]
}
